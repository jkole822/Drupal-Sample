{% set cta_field = content.field_hero_cta.0 %}
{% set secondary_cta_field = content.field_hero_secondary_cta.0 %}
{% set image_url = file_url(content.field_hero_image['#items'].entity.uri.value) %}
{% set image_alt = content.field_hero_image['#items'].entity.alt %}

{% include 'themes/custom/mytheme/components/hero.twig' with {
  title: content.field_hero_title[0],
  subtitle: content.field_hero_subtitle[0],
  image_url: image_url,
  image_alt: image_alt,
  cta: {
    title: cta_field['#title'],
    url: cta_field['#url_title'],
  },
  secondary_cta: {
    title: secondary_cta_field['#title'],
    url: secondary_cta_field['#url_title'],
  }
} %}
